<UserControl x:Class="EpiDashboard.Mapping.LayerListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dashboard="clr-namespace:EpiDashboard.Mapping"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Label x:Name="lblLayerType">Layer Type:</Label>
            <ComboBox HorizontalAlignment="Left" x:Name="cbxLayerType" Width="100">
                <ComboBoxItem>Case Cluster</ComboBoxItem>
                <ComboBoxItem>Choropleth</ComboBoxItem>
            </ComboBox>
            <Grid x:Name="grdPlaceholder">

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
