<UserControl x:Class="EpiDashboard.Mapping.ZoneProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="800">
    <Grid x:Name="grdMain" Width="800">
        <StackPanel Orientation="Horizontal">
            <Label x:Name="lblTitle" Width="80" FontWeight="Bold" Visibility="Collapsed">Zone</Label>
            <Label x:Name="lblRadius">Radius:</Label>
            <TextBox x:Name="txtRadius" Width="100"/>
            <Label x:Name="lblUnits">Units:</Label>
            <ComboBox x:Name="cbxUnits" Width="100"/>
        </StackPanel>
        <Rectangle x:Name="rctColor" HorizontalAlignment="Right" Height="20" Width="20" Stroke="DarkGray" Cursor="Hand" Fill="#99FF1100" Margin="0,0,50,0">
            <Rectangle.ToolTip>
                <Label Content="Point color"/>
            </Rectangle.ToolTip>
        </Rectangle>
        <Button x:Name="btnOK" Content="OK" Width="30" HorizontalAlignment="Right" IsEnabled="False"/>
    </Grid>
</UserControl>
