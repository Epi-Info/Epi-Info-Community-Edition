<UserControl 
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
    x:Class="SilverlightControls.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="430" d:DesignWidth="720" BorderThickness="1">
    <StackPanel x:Name="stackPanel" Height="430" Width="720">
        <toolkit:Chart x:Name="Chart" BorderThickness="0" Margin="0,0" Padding="0" Height="429" VerticalAlignment="Top" Width="720" Background="White">
            <toolkit:Chart.Series>
            </toolkit:Chart.Series>
        </toolkit:Chart>
        <TextBlock Name="FailOverMessage" TextWrapping="Wrap" TextAlignment="Left" Height="430" Width="720" FontStyle="Italic"/>
    </StackPanel>
</UserControl>