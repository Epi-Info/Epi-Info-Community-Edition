<ToggleButton x:Class="EpiDashboard.Controls.SettingsToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ToggleButton.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ToggleButton.Resources>
    <StackPanel>
        <TextBlock x:Name="tblockTitle" Margin="4" FontSize="28" FontWeight="Light"></TextBlock>
        <TextBlock x:Name="tblockDescription" Margin="4, 0, 4, 0" FontSize="14" FontWeight="Light" TextWrapping="WrapWithOverflow"></TextBlock>
    </StackPanel>
</ToggleButton>
